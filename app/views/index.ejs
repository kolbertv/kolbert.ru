<!DOCTYPE html>
<html lang="ru">

<head>

    <%- include('includes/head.ejs')%>
    <link rel="stylesheet" href="../public/style/index.css">

</head>

<body id="body">

    <%- include('includes/header.ejs')%>

    <%- include('includes/contact.ejs')%>



    <section class="container" id="portfolio">
        <div class="rc-title">
            <div>
                <h2>Портфолио</h2>
            </div>
        </div>
        <div class="gallery-container">
            <% for (work of works) {%>
            <div class="gallery-item" style="background-image: url('<%= work.url %>');">
                <div class="gallery-description">
                    <p>
                        <%= work.descript %>
                    </p>
                    <p>
                        <%= work.title %>
                    </p>
                    <p>
                        <%= work.feature %>
                    </p>
                    <p>
                        Год:
                        <%= work.year %>
                    </p>
                </div>
            </div>
            <% } %>
        </div>
        <div class="rc-wrap">
            <div class="rc-button">
                <a class="rc__button" href="/portfolio/exampl">Посмотреть другие работы</a>
            </div>
        </div>
    </section>








    <%- include('includes/rc.ejs')%>

    <%- include('includes/footer.ejs')%>

    <script src="../public/js/app.js"></script>

</body>

</html>